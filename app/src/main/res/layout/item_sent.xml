<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/item_text_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/item_img_avt_sender"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp">
            <TextView
                android:id="@+id/item_text_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_sent">
                <TextView
                    android:id="@+id/item_text_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="string/app_nameskaakk"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"/>
                <ImageView
                    android:id="@+id/item_img"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:id="@+id/item_linear_voice"
                    android:layout_width="200dp"
                    android:layout_margin="5dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:cardCornerRadius="100dp"
                        tools:ignore="MissingConstraints">
                        <ImageView
                            android:id="@+id/item_img_play"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_round_play_circle_outline_24"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Tin nhắn thoại"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item_linear_call"
                    android:layout_width="200dp"
                    android:layout_margin="5dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:cardCornerRadius="100dp"
                        tools:ignore="MissingConstraints">
                        <ImageView
                            android:id="@+id/item_img_call"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_phone"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/item_text_call"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="call"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/item_text_time"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="10dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>